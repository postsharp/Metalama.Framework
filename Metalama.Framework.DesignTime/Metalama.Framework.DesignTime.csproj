<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\Build\RoslynVersion\Latest.imports" />
    
    <!-- Only analyze nullability in the high target framework -->
    <Import Project="..\eng\DisableNullabilityWarnings.props" Condition="'$(TargetFramework)'!='net6.0'"/>

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsPackable>false</IsPackable>
        <AssemblyName>Metalama.Framework.DesignTime.$(ThisRoslynVersion)</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Metalama.Framework.DesignTime.Contracts.1.0\Metalama.Framework.DesignTime.Contracts.1.0.csproj" />
        <ProjectReference Include="..\Metalama.Framework.Engine$(ThisRoslynVersionProjectSuffix)\Metalama.Framework.Engine$(ThisRoslynVersionProjectSuffix).csproj" />
        <InternalsVisibleTo Include="Metalama.Framework.Tests.UnitTests.Internals" />
    </ItemGroup>


    <ItemGroup>
        <Compile Include="..\.generated\$(ThisRoslynVersion)\Metalama.Framework.DesignTime\*.cs" />
    </ItemGroup>


</Project>
