<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net472</TargetFramework>
    <UseWPF>true</UseWPF>
    <LangVersion>9.0</LangVersion>
  </PropertyGroup>

  <!-- work around https://developercommunity.visualstudio.com/content/problem/1147498/generatepathproperty-not-working-properly-perhaps.html; this shouldn't be needed once build is based on packages -->
  <Import Project="obj\Caravela.Patterns.Costura.WpfApp.csproj.nuget.g.props" Condition="Exists('obj\Caravela.Patterns.Costura.WpfApp.csproj.nuget.g.props')" />

  <Import Project="..\Caravela.Framework.TestApp\CaravelaReference.props" />

  <ItemGroup Condition="$(ReferencesUsingPackages) != 'true'">
    <ProjectReference Include="..\Caravela.Patterns.Costura\Caravela.Patterns.Costura.csproj" OutputItemType="Analyzer" />
  </ItemGroup>

  <ItemGroup Condition="$(ReferencesUsingPackages) == 'true'">
    <PackageReference Include="Caravela.Patterns.Costura" Version="$(CaravelaReferenceVersion)" />
  </ItemGroup>

</Project>
