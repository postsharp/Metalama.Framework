<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;net5.0</TargetFrameworks>
        <PackageId>Metalama.Framework.Redist</PackageId>
        <PackageDescription>
            Redistributable components for package 'Metalama.Framework'. This package should only be installed as a dependency.
            (This is not the package you are looking for).
        </PackageDescription>

    </PropertyGroup>


    <ItemGroup>
        <Compile Include="..\Metalama.SystemTypes\NullableAttributes.cs" Link="System Types\NullableAttributes.cs"/>
        <Compile Include="..\Metalama.SystemTypes\IsExternalInit.cs" Link="System Types\IsExternalInit.cs"/>
    </ItemGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="Metalama.Framework.Engine"/>
        <InternalsVisibleTo Include="Metalama.TestFramework"/>
        <InternalsVisibleTo Include="Metalama.Framework.Tests.UnitTests.Internals"/>
        <InternalsVisibleTo Include="Metalama.Framework.Tests.Integration.Internals"/>
        <InternalsVisibleTo Include="Metalama.Roslyn"/>
        <InternalsVisibleTo Include="DynamicProxyGenAssembly2" Key="$(FakeItEasyKey)" LoadsWithinVisualStudio="false"/>
        <PackageReference Include="Microsoft.CSharp" Version="$(MicrosoftCSharpVersion)"/>
        <PackageReference Include="System.Collections.Immutable" Version="$(SystemCollectionsImmutableVersion)"/>
    </ItemGroup>

    <!-- based on https://stackoverflow.com/a/56018426/41071 -->
    <PropertyGroup>
        <TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);SetPackageContent</TargetsForTfmSpecificBuildOutput>
    </PropertyGroup>
    <Target Name="SetPackageContent" DependsOnTargets="ResolveReferences">
        <ItemGroup>
            <BuildOutputInPackage Include="@(ReferenceCopyLocalPaths)" Condition="%(ReferenceSourceTarget) == 'ProjectReference'"/>
            <BuildOutputInPackage Include="@(ReferenceCopyLocalPaths->'%(rootdir)%(directory)%(filename).xml')" Condition="%(ReferenceSourceTarget) == 'ProjectReference'"/>
        </ItemGroup>
    </Target>

</Project>
