        <InternalsVisibleTo Include="Metalama.Framework.Engine.4.0.1" />
        <InternalsVisibleTo Include="Metalama.TestFramework" />
        <InternalsVisibleTo Include="Metalama.Framework.Tests.UnitTests.Internals" />
        <InternalsVisibleTo Include="Metalama.Framework.Tests.Integration.Internals" />
        <InternalsVisibleTo Include="Metalama.Roslyn" />
        <InternalsVisibleTo Include="DynamicProxyGenAssembly2" Key="$(FakeItEasyKey)" LoadsWithinVisualStudio="false" />
        <PackageReference Include="Microsoft.CSharp" Version="$(MicrosoftCSharpVersion)" />
        <PackageReference Include="System.Collections.Immutable" Version="$(SystemCollectionsImmutableVersion)" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Metalama.SystemTypes\Metalama.SystemTypes.csproj" Condition="'$(TargetFramework)'=='netstandard2.0'" />
    </ItemGroup>

</Project>
