<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <!-- We need to target .NET Standard 2.0 and .NET 5.0 separately because of NullableAttributes.cs. We don't want these
           types to be in a .NET 5 build, otherwise it would conflict with the types in System.Runtime. -->
        <TargetFrameworks>netstandard2.0;net5.0</TargetFrameworks>
        <RootNamespace>Metalama.Framework.DesignTime.Contracts</RootNamespace>
        
        <!-- It is essential that the assembly version remains constant and that no changes are done in the contracts
             in a publicly released package. When a change is needed, a new project is required. -->
        <AssemblyVersion>1.0</AssemblyVersion>
    </PropertyGroup>

    <ItemGroup>
        <!-- It is essential that the package version remains constant.-->
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.0.1" PrivateAssets="all" />
    </ItemGroup>


    <ItemGroup>
        <Compile Include="..\NullableAttributes.cs" Link="NullableAttributes.cs" />
        <Compile Include="..\IsExternalInit.cs" Link="NullableAttributes.cs" />
    </ItemGroup>

</Project>
