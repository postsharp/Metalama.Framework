<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <!-- This project never executes under .NET 5.0 in production, but we are including the framework
             for simplicity because the tests also run under .NET 5.0. -->
        <TargetFrameworks>netstandard2.0;net5.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Metalama.Framework.DesignTime\Metalama.Framework.DesignTime.csproj" />
        <PackageReference Include="StreamJsonRpc" Version="$(StreamJsonRpcVersion)" />
        <InternalsVisibleTo Include="Metalama.Framework.Tests.UnitTests.Internals" />
        <ProjectReference Include="..\Metalama.SystemTypes\Metalama.SystemTypes.csproj" Condition="'$(TargetFramework)'=='netstandard2.0'" />
    </ItemGroup>

</Project>
