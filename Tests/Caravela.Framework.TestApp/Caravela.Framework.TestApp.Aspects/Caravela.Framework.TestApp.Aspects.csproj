<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <CaravelaExportAspects>true</CaravelaExportAspects>
    <CaravelaEmitCompilerTransformedFiles>True</CaravelaEmitCompilerTransformedFiles>
    <CaravelaDebugTransformedCode>True</CaravelaDebugTransformedCode>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Validation\**" />
    <EmbeddedResource Remove="Validation\**" />
    <None Remove="Validation\**" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Caravela.Framework.TestApp.Library\Caravela.Framework.TestApp.Library.csproj" />
    <PackageReference Include="Caravela.Framework" Version="$(CaravelaVersion)" />
  </ItemGroup>

</Project>
