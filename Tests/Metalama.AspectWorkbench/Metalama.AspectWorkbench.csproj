<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <NoWarn>CS8002;SA0001</NoWarn>
    <GenerateDocumentationFile>False</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PostSharp.Patterns.Model" Version="6.10.4-rc" />
    <PackageReference Include="RoslynPad.Editor.Windows" Version="$(RoslynPadVersion)" />
    <PackageReference Include="RoslynPad.Roslyn" Version="$(RoslynPadVersion)" />
    <PackageReference Include="Microsoft.CodeAnalysis.VisualBasic.Workspaces" Version="$(RoslynPadVersion)" />
    <PackageReference Include="Microsoft.CodeAnalysis.VisualBasic.Features" Version="$(RoslynPadVersion)" />
    <PackageReference Include="Metalama.Compiler.Sdk" Version="$(MetalamaCompilerVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Metalama.Framework.Impl\Metalama.Framework.Impl.csproj" />
    <ProjectReference Include="..\..\Metalama.Framework\Metalama.Framework.csproj" />
    <ProjectReference Include="..\Metalama.Framework.Tests.Integration\Metalama.Framework.Tests.Integration.csproj" />
    <ProjectReference Include="..\Metalama.Framework.Tests.Integration.Internals\Metalama.Framework.Tests.Integration.Internals.csproj" />
  </ItemGroup>
  
  <!-- Disable this project when obfuscation is enabled -->
  <ItemGroup Condition="'$(Obfuscate)'=='True'">
      <Compile Remove="**\*" />
      <Page Remove="**\*" />
  </ItemGroup>

</Project>