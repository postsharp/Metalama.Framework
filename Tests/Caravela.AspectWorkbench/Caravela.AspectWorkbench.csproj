<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <NoWarn>CS8002;SA0001</NoWarn>
    <GenerateDocumentationFile>False</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PostSharp.Patterns.Model" Version="6.9.9" />
    <PackageReference Include="RoslynPad.Editor.Windows" Version="4.0.0-4.final" />
    <PackageReference Include="RoslynPad.Roslyn" Version="4.0.0-4.final" />
	<PackageReference Include="Microsoft.CodeAnalysis.VisualBasic.Workspaces" Version="4.0.0-4.final" />
	<PackageReference Include="Microsoft.CodeAnalysis.VisualBasic.Features" Version="4.0.0-4.final" />
	<PackageReference Include="Caravela.Compiler.Sdk" Version="$(CaravelaCompilerVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Caravela.Framework.Impl\Caravela.Framework.Impl.csproj" />
    <ProjectReference Include="..\..\Caravela.Framework\Caravela.Framework.csproj" />
    <ProjectReference Include="..\Caravela.Framework.Tests.PublicPipeline\Caravela.Framework.Tests.PublicPipeline.csproj" />
    <ProjectReference Include="..\Caravela.Framework.Tests.InternalPipeline\Caravela.Framework.Tests.InternalPipeline.csproj" />
  </ItemGroup>
  
  <!-- Disable this project when obfuscation is enabled -->
  <ItemGroup Condition="'$(Obfuscate)'=='True'">
      <Compile Remove="**\*" />
      <Page Remove="**\*" />
  </ItemGroup>

</Project>