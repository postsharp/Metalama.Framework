<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Description>Provides a base class AspectUnitTestBase that allows you to unit test Caravela aspects with xUnit.</Description>
  </PropertyGroup>

  <ItemGroup>
    <!-- Workspaces is used in TestRunner, Workspaces.Lightweight is a dependency of Caravela.Framework.Impl -->
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="$(RoslynVersion)" />
    <PackageReference Include="System.Reflection.MetadataLoadContext" Version="4.7.2" />
    <PackageReference Include="xunit.abstractions" Version="2.0.3" />
    <PackageReference Include="xunit.assert" Version="2.4.1" />
    <PackageReference Include="xunit.extensibility.core" Version="2.4.1" />
    <PackageReference Include="xunit.extensibility.execution" Version="2.4.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Caravela.Framework.DesignTime.Contracts\Caravela.Framework.DesignTime.Contracts.csproj" />
    <ProjectReference Include="..\Caravela.Framework.Impl\Caravela.Framework.Impl.csproj" />
    <ProjectReference Include="..\Caravela.Framework.Sdk\Caravela.Framework.Sdk.csproj" />
    <ProjectReference Include="..\Caravela.Framework\Caravela.Framework.csproj" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Caravela.Framework.Tests.Integration" />
    <InternalsVisibleTo Include="Caravela.AspectWorkbench" />
  </ItemGroup>
  
  <ItemGroup>
    <None Update="Caravela.TestFramework.props">
          <Pack>true</Pack>
          <PackagePath>build</PackagePath>
    </None>
    <None Update="Caravela.TestFramework.targets">
      <Pack>true</Pack>
      <PackagePath>build</PackagePath>
    </None>
    </ItemGroup>
  

</Project>
