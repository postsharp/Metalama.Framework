<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>

    <PackageId>Caravela.Framework.Sdk</PackageId>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Remove="*.*" />

    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="$(RoslynVersion)" />
    <ProjectReference Include="..\Caravela.Framework.Impl\Caravela.Framework.Impl.csproj" />
    
    <ProjectReference Include="Caravela.Framework.Sdk.csproj" PrivateAssets="all" />
  </ItemGroup>

  <PropertyGroup>
    <TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);SetPackageContent</TargetsForTfmSpecificBuildOutput>
  </PropertyGroup>
  <Target Name="SetPackageContent" DependsOnTargets="ResolveReferences">
    <ItemGroup>
      <!-- include Sdk assembly -->
      <BuildOutputInPackage Include="$(OutputPath)Caravela.Framework.Sdk.dll" />
      <!-- exclude assembly from the current project -->
      <BuiltProjectOutputGroupOutput Remove="@(BuiltProjectOutputGroupOutput)" />
    </ItemGroup>
  </Target>

  
</Project>