<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageDescription>
      PostSharp project "Caravela" SDK. A tool for custom source code modifying extensions using the Roslyn API. More powerful than source generators.
    </PackageDescription>
    <RootNamespace>Caravela.Framework.Impl</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Include="build\Caravela.Framework.Sdk.targets" Pack="true" PackagePath="build" />

    <InternalsVisibleTo Include="Caravela.Framework.Impl" />
    
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="$(RoslynVersion)" />
    
    <PackageReference Include="PostSharp.Patterns.Common.Redist" Version="6.9.3" />

    <ProjectReference Include="..\Caravela.Framework\Caravela.Framework.csproj" />
  </ItemGroup>

</Project>
