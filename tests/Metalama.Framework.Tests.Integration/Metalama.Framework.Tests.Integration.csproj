<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\..\Metalama.TestFramework\Metalama.TestFramework.props" />
    <Import Project="..\..\eng\Coverage.props" />


    <PropertyGroup>
        <TargetFrameworks>netframework4.8;net6.0</TargetFrameworks>
        <IsPackable>false</IsPackable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <MetalamaTestAutoExclude>False</MetalamaTestAutoExclude>
        <MetalamaTestGenerateDefaultRunner>False</MetalamaTestGenerateDefaultRunner>
        <RootNamespace>Metalama.Framework.Tests.Integration</RootNamespace>        
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <NoWarn>1591,1572,1573,CS8892</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="$(MicrosoftNETTestSdkVersion)" />
        <PackageReference Include="xunit" Version="$(xUnitVersion)" />
        <PackageReference Include="xunit.runner.visualstudio" Version="$(xUnitVersion)" />
        <PackageReference Include="Metalama.Compiler.Sdk" Version="$(MetalamaCompilerVersion)" />

        <!-- These packages ared used in tests -->
        <PackageReference Include="Microsoft.Win32.Registry" Version="5.0.0" />
        <PackageReference Include="System.Text.Json" Version="6.0.3" />
    </ItemGroup>

    <ItemGroup>
        <!-- Exclude files that intentionally do not compile -->
        <Compile Remove="Tests\**\__*.cs" />
        <None Include="Tests\**\__*.cs" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="Tests\Aspects\Contracts\Property_Get - Copy.t.cs" />
      <Compile Remove="Tests\Aspects\Contracts\Property_Introduced - Copy.t.cs" />
      <Compile Remove="Tests\Aspects\Contracts\Property_InvalidDirections - Copy.t.cs" />
      <Compile Remove="Tests\Aspects\Contracts\Property_Set - Copy.t.cs" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\Metalama.Framework.Engine\Metalama.Framework.Engine.csproj" />
        <ProjectReference Include="..\..\Metalama.Framework\Metalama.Framework.csproj" />
        <ProjectReference Include="..\..\Metalama.TestFramework\Metalama.TestFramework.csproj" />
    </ItemGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="Metalama.AspectWorkbench" />
    </ItemGroup>

    <ItemGroup>
      <None Include="Tests\Aspects\Contracts\Indexer_Get.t.cs">
        <SubType>Code</SubType>
        <DependentUpon>Indexer_Get.cs</DependentUpon>
      </None>
      <None Include="Tests\Aspects\Contracts\Indexer_Introduced.t.cs">
        <SubType>Code</SubType>
        <DependentUpon>Indexer_Introduced.cs</DependentUpon>
      </None>
      <None Include="Tests\Aspects\Contracts\Indexer_InvalidDirections.t.cs">
        <SubType>Code</SubType>
        <DependentUpon>Indexer_InvalidDirections.cs</DependentUpon>
      </None>
      <None Include="Tests\Aspects\Contracts\Indexer_Set.t.cs">
        <SubType>Code</SubType>
        <DependentUpon>Indexer_Set.cs</DependentUpon>
      </None>
    </ItemGroup>


    <Import Project="..\..\Metalama.TestFramework\Metalama.TestFramework.targets" />

</Project>
